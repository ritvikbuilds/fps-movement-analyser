<Application x:Class="NoteD.Overlay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Colors matching NotedFPS style -->
            <Color x:Key="BackgroundColor">#1A1A2E</Color>
            <Color x:Key="PanelColor">#16213E</Color>
            <Color x:Key="AKeyColor">#FF6B35</Color>
            <Color x:Key="DKeyColor">#4ECDC4</Color>
            <Color x:Key="ClickColor">#FF3366</Color>
            <Color x:Key="TextColor">#FFFFFF</Color>
            <Color x:Key="GridLineColor">#2A2A4A</Color>
            
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
            <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
            <SolidColorBrush x:Key="AKeyBrush" Color="{StaticResource AKeyColor}"/>
            <SolidColorBrush x:Key="DKeyBrush" Color="{StaticResource DKeyColor}"/>
            <SolidColorBrush x:Key="ClickBrush" Color="{StaticResource ClickColor}"/>
            <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
            <SolidColorBrush x:Key="GridLineBrush" Color="{StaticResource GridLineColor}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>


