<Window x:Class="NoteD.Overlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NoteD Settings"
        Width="400" Height="500"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A2E"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#16213E"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#2A2A4A"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4ECDC4"/>
            <Setter Property="Foreground" Value="#1A1A2E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Key Selection -->
                <TextBlock Text="MONITORED KEYS" FontWeight="Bold" FontSize="13" Margin="0,0,0,10"/>
                <StackPanel x:Name="KeyCheckboxes">
                    <CheckBox x:Name="CheckA" Content="A (Strafe Left)" IsChecked="True"/>
                    <CheckBox x:Name="CheckD" Content="D (Strafe Right)" IsChecked="True"/>
                    <CheckBox x:Name="CheckW" Content="W (Forward)" IsChecked="True"/>
                    <CheckBox x:Name="CheckS" Content="S (Backward)" IsChecked="True"/>
                </StackPanel>
                
                <!-- Timing Configuration -->
                <TextBlock Text="TIMING" FontWeight="Bold" FontSize="13" Margin="0,20,0,10"/>
                <TextBlock Text="Lookup Window (ms)"/>
                <TextBox x:Name="LookupWindowInput" Text="200"/>
                <TextBlock Text="Debounce (ms)"/>
                <TextBox x:Name="DebounceInput" Text="2"/>
                
                <!-- Visual Configuration -->
                <TextBlock Text="VISUAL" FontWeight="Bold" FontSize="13" Margin="0,20,0,10"/>
                <TextBlock Text="Overlay Opacity"/>
                <Slider x:Name="OpacitySlider" Minimum="0.1" Maximum="1.0" Value="1.0" 
                        TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
                <TextBlock Text="Timeline Duration (seconds)"/>
                <TextBox x:Name="TimelineSecondsInput" Text="5"/>
                <TextBlock Text="Font Size"/>
                <TextBox x:Name="FontSizeInput" Text="12"/>
                
                <!-- Hotkeys -->
                <TextBlock Text="HOTKEYS" FontWeight="Bold" FontSize="13" Margin="0,20,0,10"/>
                <TextBlock Text="Toggle Logging"/>
                <TextBox x:Name="HotkeyLoggingInput" Text="F9"/>
                <TextBlock Text="Open Settings"/>
                <TextBox x:Name="HotkeySettingsInput" Text="F8"/>
                <TextBlock Text="Toggle Overlay"/>
                <TextBox x:Name="HotkeyOverlayInput" Text="F7"/>
                
                <!-- Output Path -->
                <TextBlock Text="OUTPUT" FontWeight="Bold" FontSize="13" Margin="0,20,0,10"/>
                <TextBlock Text="Log Directory"/>
                <TextBox x:Name="OutputPathInput"/>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Click="CancelButton_Click" Background="#666666" Margin="0,0,10,0"/>
            <Button Content="Save" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
