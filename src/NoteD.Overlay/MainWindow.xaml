<Window x:Class="NoteD.Overlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NoteD - FPS Input Analyzer"
        Width="500" Height="180"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Topmost="True"
        Background="{StaticResource BackgroundBrush}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Window.Resources>
        <Style x:Key="KeyLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource PanelBrush}" CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="NoteD" 
                               Foreground="{StaticResource TextBrush}" 
                               FontWeight="Bold" 
                               FontSize="12"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" 
                               Text=" - Listening" 
                               Foreground="#888888" 
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="—" Width="30" Height="28" 
                            Click="MinimizeButton_Click"
                            Background="Transparent" 
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            FontWeight="Bold"/>
                    <Button Content="×" Width="30" Height="28" 
                            Click="CloseButton_Click"
                            Background="Transparent" 
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            FontWeight="Bold"
                            FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Timeline Area -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="28"/>
            </Grid.RowDefinitions>
            
            <!-- Key Labels -->
            <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource PanelBrush}" Margin="0,2" CornerRadius="3">
                <TextBlock Text="A" Style="{StaticResource KeyLabelStyle}" Foreground="{StaticResource AKeyBrush}"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource PanelBrush}" Margin="0,2" CornerRadius="3">
                <TextBlock Text="D" Style="{StaticResource KeyLabelStyle}" Foreground="{StaticResource DKeyBrush}"/>
            </Border>
            
            <!-- Timeline Canvas -->
            <Canvas x:Name="TimelineCanvas" 
                    Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" 
                    Background="{StaticResource PanelBrush}"
                    ClipToBounds="True"
                    Margin="5,2"/>
            
            <!-- Click Lane (for delta labels) -->
            <Canvas x:Name="ClickCanvas"
                    Grid.Row="2" Grid.Column="1"
                    Background="{StaticResource PanelBrush}"
                    ClipToBounds="True"
                    Margin="5,2"/>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource PanelBrush}">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="DeltaDisplay" 
                           Grid.Column="0"
                           Text="Last click: -" 
                           Foreground="#AAAAAA" 
                           FontSize="11"
                           FontFamily="Consolas"
                           VerticalAlignment="Center"/>
                
                <TextBlock x:Name="FpsDisplay" 
                           Grid.Column="1"
                           Text="60 FPS" 
                           Foreground="#666666" 
                           FontSize="10"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>


