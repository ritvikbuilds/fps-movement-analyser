<Window x:Class="NoteD.Overlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NoteD - FPS Input Analyzer"
        Width="900" Height="220"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Topmost="True"
        Background="{StaticResource BackgroundBrush}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Window.Resources>
        <Style x:Key="KeyLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource PanelBrush}" CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="NoteD" 
                               Foreground="{StaticResource TextBrush}" 
                               FontWeight="Bold" 
                               FontSize="12"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" 
                               Text=" - Listening" 
                               Foreground="#888888" 
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="—" Width="30" Height="28" 
                            Click="MinimizeButton_Click"
                            Background="Transparent" 
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            FontWeight="Bold"/>
                    <Button Content="×" Width="30" Height="28" 
                            Click="CloseButton_Click"
                            Background="Transparent" 
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            FontWeight="Bold"
                            FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Legend Row -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                <Rectangle Width="20" Height="10" Fill="{StaticResource AKeyBrush}" RadiusX="2" RadiusY="2" Margin="0,0,5,0"/>
                <TextBlock Text="A Key" Foreground="{StaticResource TextBrush}" FontSize="10" Margin="0,0,15,0" VerticalAlignment="Center"/>
                <Rectangle Width="20" Height="10" Fill="{StaticResource DKeyBrush}" RadiusX="2" RadiusY="2" Margin="0,0,5,0"/>
                <TextBlock Text="D Key" Foreground="{StaticResource TextBrush}" FontSize="10" Margin="0,0,15,0" VerticalAlignment="Center"/>
                <Ellipse Width="10" Height="10" Fill="{StaticResource ClickBrush}" Margin="0,0,5,0"/>
                <TextBlock Text="Click" Foreground="{StaticResource TextBrush}" FontSize="10" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Timeline Area -->
        <Grid Grid.Row="2" Margin="5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Key Labels -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="A" Style="{StaticResource KeyLabelStyle}" Foreground="{StaticResource AKeyBrush}"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="D" Style="{StaticResource KeyLabelStyle}" Foreground="{StaticResource DKeyBrush}"/>
            
            <!-- A Lane -->
            <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource PanelBrush}" ClipToBounds="True">
                <Image x:Name="ALaneImage" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Border>
            
            <!-- D Lane -->
            <Border Grid.Row="2" Grid.Column="1" Background="{StaticResource PanelBrush}" ClipToBounds="True">
                <Image x:Name="DLaneImage" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Border>
        </Grid>
        
        <!-- Time Axis -->
        <Border Grid.Row="3" Margin="30,0,5,0" ClipToBounds="True">
            <Image x:Name="TimeAxisImage" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{StaticResource PanelBrush}">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="DeltaDisplay" 
                           Grid.Column="0"
                           Text="Last click: -" 
                           Foreground="#AAAAAA" 
                           FontSize="11"
                           FontFamily="Consolas"
                           VerticalAlignment="Center"/>
                
                <TextBlock x:Name="FpsDisplay" 
                           Grid.Column="1"
                           Text="60 FPS" 
                           Foreground="#666666" 
                           FontSize="10"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>


